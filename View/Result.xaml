<Page x:Class="ЧисленныМетоды.View.Result"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ЧисленныМетоды"
      mc:Ignorable="d" 
      Title="Result">
    <Page.Resources>
        <ResourceDictionary Source="../Style/StylePageResult.xaml"></ResourceDictionary>
    </Page.Resources>

    <Border BorderThickness="2" BorderBrush="Red">
        <Grid Background="White" x:Name="GridPage" Style="{StaticResource MainGridPageResult}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Content="Результат" Style="{StaticResource LabelPageResult}" />
            <Label Grid.Column="1" Content="Привет мир" Style="{StaticResource LabelPageResult}" />
        </Grid>
    </Border>


</Page>
